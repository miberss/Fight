function on_secondary_attack(attacker: player, item: Item struct):
    set {_scan} to hit_scan_from({_attacker}, 8.5)
    stop if {_scan}->victim is not set
    set {_ctx} to a_attack_context({_attacker}, {_scan}->victim, {_item}, ("secondary"))
    set {_ctx}->hit to {_scan}->hit
    on_hit({_ctx})