function load_logger():
    save_component("log_type:info", wrap_around(colored_component("‚ö°", light blue), c("["), c("]"), 0.8))
    save_component("log_type:debug", wrap_around(colored_component("‚Åâ", orange), c("["), c("]"), 0.8))
    save_component("log_type:error", wrap_around(colored_component("üîî", red), c("["), c("]"), 0.8))

function log(type: string, component: textcomponent):
    server_message_save({_type})
    send_and_log({_component}, players where [{message_blacklist::%input%::%{_type}%} is not set])

function console_log(type: string, objects: objects):
    server_message_save({_type})
    send_and_log(merge components (component_from_id("log_type:%{_type}%"), minimessage from "%{_objects::*}%") with px(2), (console, ops))

function debug(objects: objects):
    console_log("debug", {_objects::*})

function error(objects: objects):
    console_log("error", {_objects::*})

function info(objects: objects):
    console_log("info", {_objects::*})

function add_to_blacklist(player: player, type: string):
    set {message_blacklist::%{_player}%::%{_type}%} to {_type}

function remove_from_blacklist(player: player, type: string):
    delete {message_blacklist::%{_player}%::%{_type}%}